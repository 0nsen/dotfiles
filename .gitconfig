	name = 0nsen
	email = to.the.lettr@pm.me

[status]
	branch = true
	showStash = true

[pull]
	rebase = false

[init]
	defaultBranch = main

[color "diff"]
	meta = black bold
	; frag = magenta
	; context = white
	; whitespace = yellow reverse
	; old = red

[color "decorate"]
	HEAD = red
	branch = green
	remoteBranch = brightgreen

[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
